@model IEnumerable<Product>
<h1>Products</h1>
<p>
	<a class="btn btn-success" asp-controller="Product" asp-action="Create">Create New Product</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Stock</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var product in Model)
		{
			<tr>
				<td>@product.Name</td>
				<td>@product.Description</td>
				<td>@product.Price</td>
				<td>@product.Stock</td>
				<td>
					<a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.id">Edit</a>
					<a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.id">Delete</a>
				</td>
			</tr>
			
		}
	</tbody>

</table>
